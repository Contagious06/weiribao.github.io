
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - " }

block header
  h1= page.title
  span.big-date= moment.utc(page.date).format('MMMM DD, YYYY')
  - var tags = env.helpers.getTagsFromArticle(page)
  each tag in tags
    a.big-tag(href=env.helpers.getTagHome(tag).url)= tag

block content
  article.article
    section.content!= typogr(page.html).typogrify()

